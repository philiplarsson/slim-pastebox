{% extends 'base-templates/main-template.twig' %}

{% block content %}
    <section class="section">
        <div class="container has-text-centered">

            <h1 class="title is-1">Pastebox</h1>
            <br/>
            <form action="{{ path_for('createPaste') }}" method="post">

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Title</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input" name="title">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Syntax</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <input class="input" name="syntax">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label" for="expires">Expire</label>
                    </div>
                    <div class="field-body">
                        <div class="field is-narrow">
                            <div class="control">
                                <div class="select is-fullwidth">
                                    <select name="expires" id="expires">
                                        <option value="never" selected>never</option>
                                        <option value="+24 hours">24 hours</option>
                                        <option value="+48 hours">48 hours</option>
                                        <option value="+1 week">1 week</option>
                                        <option value="+2 weeks">2 weeks</option>
                                        <option value="+1 month">1 month</option>
                                        <option value="+3 months">3 months</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label is-normal">
                        <label class="label">Paste</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <textarea class="textarea" name="paste" placeholder="Hello World" rows="10"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field is-horizontal">
                    <div class="field-label">
                        <!-- Left empty for spacing -->
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </section>
{% endblock %}